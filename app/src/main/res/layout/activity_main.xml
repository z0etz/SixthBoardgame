<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/wooden_background"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sixth_text_image"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_medium"
        android:contentDescription="@string/wooden_background_image_description"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewLetsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/let_s_play"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/heading_small" />

        <TextView
            android:id="@+id/textViewExclamation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exclamation_mark_with_front_space"
            android:textColor="@color/orange_light"
            android:fontFamily="@font/inter_semibold"
            android:textSize="@dimen/heading_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:translationZ="1dp"
        android:layout_marginTop="@dimen/margin_xxl">

        <TextView
            android:id="@+id/textButtonSignUp"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/sign_up"
            android:background="@drawable/gradient_button_orange"
            android:padding="@dimen/margin_small"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium"
            android:fontFamily="@font/inter_semibold" />

        <TextView
            android:id="@+id/textButtonLogin"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/login"
            android:background="@drawable/button_white"
            android:padding="@dimen/margin_small"
            android:textColor="@color/orange_dark"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:fontFamily="@font/inter_semibold"
            android:layout_margin="@dimen/margin_small"/>

    </LinearLayout>

</LinearLayout>
