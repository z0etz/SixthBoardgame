<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="8dp"
    android:layout_margin="@dimen/margin_medium"
    android:background="@drawable/background_game_dialog">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/are_you_ready"
        android:textColor="@color/orange_light"
        android:textSize="@dimen/heading_large" />

    <LinearLayout
        android:id="@+id/opponentsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameDialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="@string/username"
            android:textColor="@color/grey"
            android:textSize="@dimen/heading_small" />

        <TextView
            android:id="@+id/vsDialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/vs"
            android:textColor="@color/orange_light"
            android:textSize="@dimen/heading_large" />

        <TextView
            android:id="@+id/opponentsDialogTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/inter_bold"
            android:text="@string/opponents"
            android:textColor="@color/grey"
            android:textSize="@dimen/heading_small" />

    </LinearLayout>

    <TextView
        android:id="@+id/textButtonContinue"
        android:layout_width="@dimen/button_width_medium"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/opponentsLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_medium"
        android:background="@drawable/gradient_button_green"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:padding="@dimen/margin_small"
        android:text="@string/accept"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textButtonCancel"
        android:layout_width="@dimen/button_width_medium"
        android:layout_height="@dimen/button_height"
        android:layout_below="@id/opponentsLayout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/gradient_button_red"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/white" />

</RelativeLayout>
