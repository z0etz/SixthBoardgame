<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium"
    android:layout_margin="@dimen/margin_small"
    android:elevation="@dimen/elevation_small"
    android:background="@drawable/background_list_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/invitePlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_name"        android:textColor="@color/grey"
        android:textSize="@dimen/heading_xs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_small"
        android:fontFamily="@font/inter_bold"/>


    <Button
        android:id="@+id/invite_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send invitation"
        android:background="@color/red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toEndOf="@+id/invitePlayerName"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>